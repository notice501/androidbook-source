<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<Button android:layout_width="fill_parent" android:id="@+id/bt_alpha"
		android:layout_height="wrap_content" android:text="alpha效果" />
	<Button android:layout_width="fill_parent" android:id="@+id/bt_scale"
		android:layout_height="wrap_content" android:text="scale效果" />
	<Button android:layout_width="fill_parent" android:id="@+id/bt_translate"
		android:layout_height="wrap_content" android:text="translate效果" />
	<Button android:layout_width="fill_parent" android:id="@+id/bt_rotate"
		android:layout_height="wrap_content" android:text="rotate效果" />
	<ImageView android:layout_width="wrap_content" android:id="@+id/iv_img"
		android:layout_gravity="center" android:layout_height="wrap_content"
		android:background="@drawable/mai_dou" />
</LinearLayout>
