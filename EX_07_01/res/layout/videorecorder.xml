<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/LinearLayout01"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical">
	<Button android:layout_width="fill_parent" android:id="@+id/bt_start"
		android:layout_height="wrap_content" android:text="开始录制视频" />
	<Button android:layout_width="fill_parent" android:id="@+id/bt_stop"
		android:layout_height="wrap_content" android:text="停止录制视频" />
	<SurfaceView android:id="@+id/videoSurfaceView"
		android:visibility="visible" android:layout_width="fill_parent"
		android:layout_height="240px">
	</SurfaceView>
	<TextView android:layout_width="fill_parent" android:id="@+id/tv_info"
		android:layout_height="wrap_content" />
</LinearLayout>


