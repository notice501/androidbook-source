<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:orientation="vertical"   android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
  <LinearLayout android:orientation="vertical" 
  	android:layout_width="fill_parent" 
  	android:background="@drawable/desktop_bg" 
  	android:layout_height="wrap_content">
  </LinearLayout>
  <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
    <RelativeLayout 
    	android:id="@+id/login_main" 
    	android:background="@drawable/login_bg"
    	android:paddingTop="10dip" 
    	android:paddingBottom="5dip" 
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content">
    <TextView 
    	android:textColor="#000000"
    	android:textSize="18sp" 
    	android:gravity="bottom" 
    	android:id="@+id/account_text" 
    	android:layout_width="fill_parent" 
    	android:layout_height="35dip" 
    	android:layout_marginLeft="12dip" 
    	android:text="帐号：" />
    <EditText 
    	android:id="@+id/account_layout" 
    	android:layout_width="fill_parent" 
    	android:layout_height="40dip" 
    	android:layout_marginLeft="12dip" 
    	android:layout_marginRight="10dip" 
    	android:maxLines="1" 
    	android:singleLine="true" 
    	android:maxLength="200" 
    	android:layout_below="@id/account_text" 
    	android:inputType="textEmailAddress" />
    <TextView 
       	android:textSize="18sp" 
       	android:gravity="bottom" 
       	android:textColor="#000000"
       	android:id="@+id/password_text" 
       	android:layout_width="fill_parent" 
       	android:layout_height="35dip" 
       	android:layout_marginLeft="12dip" 
       	android:layout_marginRight="10dip" 
       	android:text="密码：" 
       	android:layout_below="@id/account_layout" 
       	android:layout_alignParentLeft="true" />
    <EditText 
        android:id="@+id/password_edit" 
        android:focusable="true" 
        android:layout_width="fill_parent" 
        android:layout_height="40dip" 
        android:layout_marginLeft="12dip" 
        android:layout_marginRight="10dip" 
        android:scrollHorizontally="true" 
        android:password="true" 
        android:singleLine="true" 
        android:maxLength="200" 
        android:layout_below="@id/password_text" 
        android:inputType="textPassword" />
    <Button 
        android:textSize="15sp" 
        android:textStyle="bold" 
        android:textColor="#ffffff" 
        android:id="@+id/login_button" 
        android:background="@drawable/login_button" 
        android:layout_width="120dip" 
        android:layout_height="wrap_content" 
        android:layout_marginTop="5dip" 
        android:layout_marginBottom="5dip" 
        android:text="登录" 
        android:layout_below="@id/password_edit" 
        android:layout_alignRight="@id/password_edit" />
    </RelativeLayout>
        <RelativeLayout 
        	android:paddingTop="10dip"
        	android:background="@drawable/login_bg2" 
        	android:layout_width="fill_parent" 
        	android:layout_height="fill_parent" 
			>
        <TextView
        	android:textColor="#000000" 
        	android:textSize="18sp"
        	android:layout_width="fill_parent" 
        	android:layout_height="35dip" 
        	android:layout_marginLeft="12dip" 
        	android:layout_marginRight="10dip" 
        	android:text="还没有你的私人帐号?" 
        	android:layout_alignParentLeft="true" />
        <Button 
        	android:textSize="15sp" 
        	android:textStyle="bold" 
        	android:textColor="#ffffff"
        	android:id="@+id/regedit_button" 
        	android:background="@drawable/reg_button" 
        	android:layout_width="120dip" 
        	android:layout_height="wrap_content" 
        	android:layout_marginRight="10dip" 
        	android:text="注册" 
        	android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>
  </LinearLayout>

