<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<Button android:layout_width="fill_parent" android:id="@+id/bt_start"
		android:layout_height="wrap_content" android:text="开始动画" />
	<Button android:layout_width="fill_parent" android:id="@+id/bt_stop"
		android:layout_height="wrap_content" android:text="停止动画" />
	<ImageView android:layout_width="wrap_content" android:id="@+id/iv_img"
		android:background="@drawable/sunrise1" android:layout_height="wrap_content" />
</LinearLayout>
